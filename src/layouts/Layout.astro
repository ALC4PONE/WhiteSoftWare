---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

interface Props {
	title: string;
}

const { title = "WhiteSofware — Free programs without registration, torrents and SMS" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <meta property="og:site_name" content="WhiteSofware">
    <meta property="og:title" content="WhiteSofware — Free programs without registration, torrents and SMS">
    <meta property="og:description" content="The site was created for users who are going to download computer programs, we tried to collect all the necessary programs that may be needed when using a computer for work, study and entertainment. You can download programs without registration, torrents and SMS.">
    <meta property="og:type" content="site">
    <meta property="og:image" content="/main.png">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@100;300;400;500;700;800;900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="pt-24 flex flex-col items-center w-full bg-indigo-100">
    <Navbar />
	  <slot />
    <Footer />
	</body>
</html>
